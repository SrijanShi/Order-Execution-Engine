# Staging Environment Configuration
NODE_ENV=staging
HOST=0.0.0.0
PORT=3000

# Staging PostgreSQL (set via environment variable)
DB_POOL_SIZE=15
DB_MAX_CONNECTIONS=30
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# Staging Redis
REDIS_MAX_RETRIES=4
REDIS_RETRY_DELAY_MS=1000
REDIS_TIMEOUT_MS=7000

# Execution settings (balanced for staging)
MAX_CONCURRENT_ORDERS=200
ORDER_TIMEOUT_MS=45000
MAX_RETRIES=4
ROUTING_TIMEOUT_MS=2500
BUILDING_TIMEOUT_MS=4000

# Queue settings
MAX_QUEUE_SIZE=20000
QUEUE_CONCURRENCY=20
JOB_TIMEOUT_MS=45000

# WebSocket settings
WS_HEARTBEAT_INTERVAL_MS=35000
WS_MAX_CONNECTIONS=2000

# Logging (detailed for staging)
LOG_LEVEL=info
LOG_FORMAT=json

# Feature flags (mostly enabled for staging)
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

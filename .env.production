# Production Environment Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=3000

# Production PostgreSQL (set via container env vars)
# DATABASE_URL should be set via environment variable or secret
DB_POOL_SIZE=20
DB_MAX_CONNECTIONS=40
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# Production Redis
# REDIS_URL should be set via environment variable or secret
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY_MS=1000
REDIS_TIMEOUT_MS=10000

# Execution settings (optimized for production)
MAX_CONCURRENT_ORDERS=500
ORDER_TIMEOUT_MS=60000
MAX_RETRIES=5
ROUTING_TIMEOUT_MS=3000
BUILDING_TIMEOUT_MS=5000

# Queue settings (high concurrency for production)
MAX_QUEUE_SIZE=50000
QUEUE_CONCURRENCY=50
JOB_TIMEOUT_MS=60000

# WebSocket settings
WS_HEARTBEAT_INTERVAL_MS=45000
WS_MAX_CONNECTIONS=5000

# Logging (errors and info only)
LOG_LEVEL=info
LOG_FORMAT=json

# Feature flags (enable in production)
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

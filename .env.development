# Development Environment Configuration
NODE_ENV=development
HOST=localhost
PORT=3000

# Local PostgreSQL (via docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dex_order_engine
DB_POOL_SIZE=5
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# Local Redis (via docker-compose)
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_MS=1000
REDIS_TIMEOUT_MS=5000

# Execution settings (relaxed for development)
MAX_CONCURRENT_ORDERS=50
ORDER_TIMEOUT_MS=30000
MAX_RETRIES=3
ROUTING_TIMEOUT_MS=2000
BUILDING_TIMEOUT_MS=3000

# Queue settings
MAX_QUEUE_SIZE=5000
QUEUE_CONCURRENCY=5
JOB_TIMEOUT_MS=30000

# WebSocket settings
WS_HEARTBEAT_INTERVAL_MS=30000
WS_MAX_CONNECTIONS=500

# Logging (verbose for development)
LOG_LEVEL=debug
LOG_FORMAT=text

# Feature flags (enabled for development)
ENABLE_RATE_LIMITING=false
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
